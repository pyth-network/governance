{
  "compilerOptions": {
    "types": ["mocha","node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "./app/**/*.ts",
    "./tests/*.ts",
  ],
  "exclude": [
    "./docker",
    "./migrations"
  ]
}
